# XMTP Configuration
XMTP_WALLET_KEY=your_xmtp_wallet_private_key_here
XMTP_DB_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
XMTP_ENV=dev
AGENT_TRIGGER=@eiopago

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Blockchain Configuration (Base Sepolia)
BASE_SEPOLIA_RPC=https://sepolia.base.org
EXPENSE_CONTRACT_ADDRESS=0x_your_deployed_contract_address_here
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_for_contract_deployment

# IPFS Configuration
