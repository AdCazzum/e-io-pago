{
  "name": "e-io-pago",
  "version": "1.0.0",
  "description": "e io pago - XMTP agent on Base Network that analyzes receipt images and splits bills equally among group members",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "gen:keys": "tsx scripts/generate-keys.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "hardhat:node": "hardhat node --hostname 0.0.0.0",
    "hardhat:compile": "hardhat compile",
    "hardhat:deploy": "hardhat run scripts/deploy-local.ts --network localhost",
    "get-ip": "tsx scripts/get-local-ip.ts"
  },
  "keywords": [
    "xmtp",
    "agent",
    "base",
    "receipt",
    "bill-split",
    "gpt-4o"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xmtp/agent-sdk": "latest",
    "@xmtp/content-type-primitives": "^2.0.2",
    "@xmtp/content-type-remote-attachment": "latest",
    "dotenv": "^16.4.5",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
